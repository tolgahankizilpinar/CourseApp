@model Candidate

<div class="display-6">
    Course Apply
</div>

<form method="post" asp-action="Apply">
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group my-2">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group my-2">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group my-2">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group my-2">
        <label asp-for="Age"></label>
        <select asp-for="Age" class="form-control">
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
        </select>
    </div>

    <fieldset>
        <legend>Select One Course</legend>
        <p>
            <input id="mvc" type="radio" asp-for="SelectedCourse" value="ASP.NET Course MVC" checked/> 
            <label>ASP.NET Course MVC</label>
        </p>
        <p>
            <input id="api" type="radio" asp-for="SelectedCourse" value="ASP.NET Course API" /> 
            <label>ASP.NET Course API</label>
        </p>
        <p>
            <input id="blazor" type="radio" asp-for="SelectedCourse" value="Blazor" /> 
            <label>Blazor</label>
        </p>
    </fieldset>

    <button class="btn btn-primary" type="submit">Apply</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Home</a>
</form>